{
  "title": "连接设备",
  "template": "table",
  "toolbar": [
    {
      "label": "创建",
      "icon": "plus",
      "type": "button",
      "action": {
        "type": "page",
        "app": "iot",
        "page": "iot/device-create",
        "params_func": "return {link_id: this.params.link_id}"
      }
    },
    {
      "key": "keyword",
      "type": "text",
      "placeholder": "请输入关键字"
    },
    {
      "type": "button",
      "icon": "search",
      "label": "搜索",
      "action": {
        "type": "script",
        "script": "this.keyword=this.toolbar.value.keyword; this.search()"
      }
    }
  ],
  "keywords": [
    "id",
    "name",
    "description"
  ],
  "operators": [
    {
      "icon": "eye",
      "action": {
        "type": "page",
        "app": "iot",
        "page": "iot/device-detail",
        "params_func": "return {id: data.id}"
      }
    },
    {
      "icon": "edit",
      "action": {
        "type": "page",
        "app": "iot",
        "page": "iot/device-edit",
        "params_func": "return {id: data.id}"
      }
    },
    {
      "icon": "delete",
      "title": "删除",
      "confirm": "确认删除？",
      "action": {
        "type": "script",
        "script": "this.request.get('iot/device/'+data.id+'/delete').subscribe(res=>{this.load()})"
      }
    }
  ],
  "columns": [
    {
      "key": "id",
      "label": "ID",
      "action": {
        "type": "page",
        "app": "iot",
        "page": "iot/device-detail",
        "params_func": "return {id: data.id}"
      }
    },
    {
      "key": "product_id",
      "label": "产品ID",
      "action": {
        "type": "page",
        "app": "iot",
        "page": "iot/product-detail",
        "params_func": "return {id: data.product_id}"
      }
    },
    {
      "key": "name",
      "label": "名称"
    },
    {
      "key": "description",
      "label": "说明"
    },
    {
      "key": "station",
      "label": "地址",
      "type": "json"
    },
    {
      "key": "disabled",
      "label": "禁用",
      "type": "boolean"
    },
    {
      "key": "created",
      "label": "日期",
      "type": "date"
    }
  ],
  "search_api": "iot/device/search",
  "mount": "if(this.params.link_id)this.filter.link_id=this.params.link_id; "
}